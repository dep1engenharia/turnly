{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "packages": [
    "apps/*",
    "apis/*",
    "packages/*"
  ],
  "npmClient": "yarn",
  "useNx": true,
  "useWorkspaces": true,
  "command": {
    "version": {
      "allowBranch": "develop",
      "conventionalCommits": true,
      "message": "chore(release): %s"
    },
    "publish": {
      "registry": "https://npm.pkg.github.com/turnly"
    }
  },
  "version": "0.1.2"
}
