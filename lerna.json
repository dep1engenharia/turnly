{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "packages": [
    "apps/*",
    "packages/*"
  ],
  "npmClient": "yarn",
  "useNx": true,
  "useWorkspaces": true,
  "command": {
    "version": {
      "allowBranch": "develop",
      "conventionalCommits": true,
      "message": "chore(release): %s"
    },
    "publish": {
      "registry": "registry.npmjs.org"
    }
  },
  "version": "0.1.52"
}
