{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint:check": {
      "outputs": []
    },
    "lint:format": {
      "outputs": []
    },
    "lint:ts:check": {
      "outputs": []
    },
    "test:benchmark": {
      "inputs": ["src/**/*.ts", "tests/**/*.ts"]
    },
    "test:coverage": {
      "inputs": ["src/**/*.ts", "tests/**/*.ts"]
    },
    "test:e2e": {
      "inputs": ["src/**/*.ts", "tests/**/*.ts"]
    },
    "test:integration": {
      "inputs": ["src/**/*.ts", "tests/**/*.ts"]
    },
    "test:unit": {
      "inputs": ["src/**/*.ts", "tests/**/*.ts"]
    },
    "test:watch": {
      "inputs": ["src/**/*.ts", "tests/**/*.ts"]
    }
  }
}
