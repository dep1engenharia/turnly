{
  "name": "@turnly/helpdesk-realtime-api",
  "version": "0.0.1",
  "private": true,
  "description": "It's the real-time event bridge that sends data between internal services and applications.",
  "license": "BSD-3-Clause",
  "author": "Turnly Team <engineering@turnly.app> (https://turnly.app)",
  "scripts": {
    "prebuild": "rm -rf dist tsconfig.tsbuildinfo",
    "build": "tsc -p tsconfig.build.json",
    "watch": "nodemon --config node_modules/@turnly/eslint-config/nodemon.json src/main.ts",
    "lint": "prettier \"./**/*.{ts,js}\" --check && eslint . --ext .js,.ts && tsc --noEmit"
  },
  "prettier": "@turnly/eslint-config/.prettierrc.js",
  "eslintConfig": {
    "extends": "@turnly/eslint-config",
    "ignorePatterns": [
      "node_modules",
      "**/*.md",
      "dist",
      "jest*",
      "coverage"
    ]
  },
  "dependencies": {
    "@turnly/common": "github:turnly/common.git#latest",
    "@turnly/realtime": "github:turnly/realtime.git#latest",
    "@turnly/grpc": "github:turnly/rpc.git#latest",
    "@turnly/shared": "github:turnly/shared.git#latest",
    "dotenv": "^16.0.1",
    "mongoose": "^6.4.6"
  },
  "devDependencies": {
    "@turnly/eslint-config": "github:turnly/configs",
    "@types/jest": "^27.0.1",
    "@types/node": "^18.14.0",
    "eslint": "^8.14.0",
    "jest": "^28.1.1",
    "nodemon": "^2.0.14",
    "prettier": "^2.3.0",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.9.5"
  },
  "resolutions": {
    "**/esquery": "1.4.0"
  },
  "engines": {
    "node": ">=18.14"
  }
}
