{
  "debug.javascript.unmapMissingSources": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "files.exclude": {
    "**/.editorconfig": true,
    "**/.eslint*": true,
    "**/.git": true,
    "**/.husky": true,
    "**/.nvmrc": true,
    "**/.prettier*": true,
    "**/dist": true,
    "**/jest*": true,
    "**/node_modules": true,
    "**/tsconfig.tsbuildinfo": true,
    "**/yarn-error.log": true,
    "**/graphql.schema.json": true
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "eslint.workingDirectories": [
    "apps/addons",
    "apps/assistance-centers",
    "apps/teams",
    "apps/custom-fields",
    "apps/queuing-system",
    "apps/tasks-scheduling",
    "apps/notifications",
    "apps/business-owners",
    "apps/widgets-realtime-api",
    "apps/platform-realtime-api",
    "apps/widgets-api",
    "apps/helpdesk-api"
  ]
}
